<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/tvItemEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם האירוע"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"/>

        <TextView
            android:id="@+id/tvItemEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemEventName"
            android:text="12/05/2024"
            android:textSize="14sp"
            android:textColor="#8E8E93"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvItemEventCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="#123456"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#318CE7"
            android:background="#F0F7FF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>
            
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>