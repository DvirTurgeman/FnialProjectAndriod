<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:layoutDirection="rtl">

    <!-- Custom Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#333333"
            android:rotation="180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="אירוע חדש"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="צרו אירוע חדש"
                android:textColor="#1A1A1A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מלאו את פרטי האירוע כדי להתחיל לאסוף זכרונות מכל האורחים שלכם במקום אחד."
                android:textColor="#8E8E93"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שם האירוע"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_box"
                android:hint="למשל: החתונה של נועה וגיא"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="תאריך האירוע"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_code_box"
                android:hint="בחר תאריך"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="12dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="צור וקבל קוד ✨"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#318CE7"
                app:cornerRadius="12dp"
                android:layout_marginBottom="40dp"/>

            <!-- Success Section (Hidden by default) -->
            <LinearLayout
                android:id="@+id/layoutSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_dashed_border"
                android:padding="24dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="האירוע נוצר בהצלחה!"
                    android:textColor="#318CE7"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הקוד הייחודי שלכם הוא:"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvGeneratedCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:text="123456"
                    android:textColor="#318CE7"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnShare"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="שתף"
                        android:textColor="#1A1A1A"
                        app:icon="@android:drawable/ic_menu_share"
                        app:iconTint="#318CE7"/>

                    <View android:layout_width="16dp" android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/btnCopy"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="העתק"
                        android:textColor="#1A1A1A"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconTint="#318CE7"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="שתפו את הקוד הזה עם האורחים שלכם.\nהם יוכלו להזין אותו באפליקציה ולהתחיל להעלות תמונות!"
                    android:textColor="#8E8E93"
                    android:textSize="11sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>