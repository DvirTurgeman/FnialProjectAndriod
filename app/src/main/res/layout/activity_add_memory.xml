<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layoutDirection="rtl">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/btnBackAdd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#333333"
            android:rotation="180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="הוספת זיכרון"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Image Picker Placeholder -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImagePicker"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F9F9F9">

                    <ImageView
                        android:id="@+id/ivSelectedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="#318CE7"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#F0F7FF"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="לחץ להעלאת תמונה"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(מקסימום 10MB JPG, PNG)"
                            android:textColor="#8E8E93"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="הברכה שלך"
                android:textColor="#1A1A1A"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etGreeting"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_code_box"
                android:gravity="top|start"
                android:hint="כתוב משהו מהלב..."
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="פרסם בקיר"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#318CE7"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_send"
        app:iconGravity="textStart"/>

</LinearLayout>